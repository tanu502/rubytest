<%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
	<%= f.error_notification %>
	<%= f.input :username ,label: "ชื่อผู้ใช้ : ", placeholder: 'Enter Username'%>
	<%= f.input :password %>
	<%= f.input :email, hint: "email address " %>
	<%= f.input :age %>
	<%= f.file_field :images ,label: "Images"%>
	<%= f.button :submit %>
	<%=  link_to 'Back', users_path ,class:'btn btn-info',id:"back" %>
	<%= f.error :base %>

<% end %>