<%= simple_form_for(@post,:html =>{:multipart => true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :title %>

    <%= f.input :user_id %>

    <%= f.input :q %>

    <%= f.file_field :img %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
